{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"],
      /* 告知 Turbo 这些环境变量会改变输出结果 */
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"], 
      "outputs": []
    },
    "type-check": {
      /* 既然用了 Project References，就不一定非要等待完整 build */
      "dependsOn": ["^type-check"], 
      "outputs": [],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "tsconfig*.json"
      ]
    },
    "db:generate": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}